@{
    ViewBag.Title = "MyAccount";
}

    <head>
        <meta charset="utf-8" />
        <link href="~/Content/Site.css" rel="stylesheet" />
    </head>
    <body>
        <h2>My Account</h2>
        <p>View and edit your personal info below.</p>
        <hr />
        <label>Login Email:</label>
        <p></p><br />
        <label>First Name:</label>
        <input type="text" name="firstName" id="firstName" />
        <label>Last Name:</label>
        <input type="text" name="lastName" id="lastName" /> <br />
        <label>Contact Email</label>
        <input type="email" name="email" placeholder="Email" pattern="[a-z0-9._%+-]+@("@")[a-z0-9.-]+\.[a-z]{2,}$" maxlength="250" />
        <label>Phone</label>
        <input type="tel" name="number" placeholder="Phone" maxlength="50" />
        <label>Address</label>
        <input type="text" name="street" placeholder="Street" maxlength="250" />
        <input type="text" name="city" placeholder="City" maxlength="250" />
        <input type="text" name="zip" placeholder="Zip" maxlength="10" />
    </body>
